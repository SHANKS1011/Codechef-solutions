#include <bits/stdc++.h>
using namespace std;
int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int n,m,k;
        cin>>n>>m>>k;
        while(k-- || (m==0 && n==0))
        {
            if(n>m)
            {
                m++;
            }
            else if(n<m)
            {
                n++;
            }
        }
        cout<<abs(n-m)<<endl;
    }
	return 0;
}
