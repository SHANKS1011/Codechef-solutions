#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	 cin >> t;
	 while(t--)
	 {
	     double q,p,total;
	     cin >> q>> p;
	     if(q>1000)
	     {
	         total= 0.9*p*q;
	     }
	     else
	     {
	         total=p*q;
	     }
	     cout<<setprecision(6)<<fixed << total << endl;
	 }
	return 0;
}
